{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "jsx": "preserve",
      "esModuleInterop": true,
      "target": "es6",
      "types": [
        "node"
      ],
      "baseUrl": ".",
      "rootDir": "src/",
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types/"
      ],
      "module": "esnext",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "noEmit": true,
      "incremental": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }